<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
 
<configuration>

  <property>
    <name>ldap.host</name>
    <value>sandbox.hortonworks.com</value>
    <description>AD/LDAP hostname e.g. ad-hdp.cloud.hortonworks.com</description>
  </property> 

  <property>
    <name>domain.name</name>
    <value>AD-HDP.COM</value>
    <description>Domain name connecting to e.g. AD-HDP.COM</description>
  </property> 
  
  <property>
    <name>bind.user</name>
    <value>CN=LDAP Access,OU=Service Accounts,DC=AD-HDP,DC=COM</value>
    <description>Bind user e.g. CN=LDAP Access,OU=Service Accounts,DC=AD-HDP,DC=COM</description>
  </property> 
  <property>
    <name>bind.password</name>
    <value></value>
    <property-type>PASSWORD</property-type>
    <description>Bind password</description>
  </property>   

  
</configuration>

